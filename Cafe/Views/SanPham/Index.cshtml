@model IEnumerable<Cafe.Models.SanPham>
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@{
    ViewBag.Title = "Index";
}

<style>
    /* Định dạng bảng */
    .table {
        width: 100%;
        border-collapse: collapse;
        border: 2px solid #000; /* Viền đen đậm cho bảng */
    }

    /* Định dạng header của bảng */
    .table th {
        background-color: #654321; /* Màu nâu */
        color: #fff; /* Màu chữ trắng */
        text-align: left;
        padding: 10px;
        border-bottom: 2px solid #000; /* Đường viền dưới header đậm hơn */
    }

    /* Định dạng dòng trong bảng */
    .table td {
        border-bottom: 1px solid #000; /* Đường viền dưới mỗi dòng màu đen */
        padding: 10px;
        border-right: 1px solid #000; /* Viền kẻ giữa các cột */
    }

    /* Định dạng link trong cột thao tác */
    .table td a {
        margin-right: 5px;
        text-decoration: none;
        color: #007bff;
    }

    .table td a:hover {
        text-decoration: underline;
    }

    /* Loại bỏ viền kẻ phía bên phải của cột cuối cùng */
    .table td:last-child {
        border-right: none;
    }
</style>

<h1>Danh mục sản phẩm</h1>

<p>
    <a asp-action="Create" class="w3-btn w3-border w3-border-brown w3-round w3-tiny w3-horver-brown">+ Thêm mới</a>
    <a asp-action="Download" class="w3-btn w3-border w3-border-brown w3-round w3-right w3-tiny w3-horver-brown fa fa-download"> Xuất ra file excel</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SanPhamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SanPhamName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gia)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SanPhamID" class="w3-button w3-green w3-round-large w3-small"><i class="fa fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.SanPhamID" class="w3-button w3-green w3-round-large w3-small"><i class="fa fa-eye"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.SanPhamID" class="w3-button w3-red w3-round-large w3-small"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@using (Html.BeginForm("Index", "SanPham", FormMethod.Get, new { id="form1"})){
    <div class="row">
        <div class="col-md-11">
            @Html.PagedListPager((IPagedList) Model, page => Url.Action("Index", new {page = page,
            pagesize= ViewBag.psize}), 
            new X.PagedList.Web.Common.PagedListRenderOptions { LiElementClasses = new string[] {"page-item"}, 
            PageClasses = new string[] { "page-link" }})
        </div>
        <div class="col-md-1">
            @Html.DropDownList("pagesize", null, new {@class="form-select"})
        </div>
    </div>

}
<script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
<script>
    $(document).ready(function(){
        $("#pagesize").change(function(){
            $("#form1").submit();
        });
    });
</script>