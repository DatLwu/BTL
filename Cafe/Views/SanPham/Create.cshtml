@model Cafe.Models.SanPham

@{
    ViewData["Title"] = "Create";
}
<style>
/* CSS for create.html */
body {
    font-family: Arial, sans-serif;
    background-color: #f5f5f5; /* Màu nền trắng */
    color: #333; /* Màu chữ */
    margin: 0;
    padding: 0;
}

h1 {
    color: #654321; /* Màu nâu cho tiêu đề h1 */
}

h4 {
    color: #654321; /* Màu nâu cho tiêu đề h4 */
}

.row {
    margin: 0 auto; /* Căn lề giữa trang */
    max-width: 800px; /* Độ rộng tối đa của khối */
}

.col-md-4 {
    width: 45%; /* Độ rộng của khối */
    float: left;
    margin: 20px;
    background-color: #654321; /* Màu nền nâu cho khối */
    padding: 20px; /* Khoảng cách bên trong khối */
    border-radius: 5px;
    box-sizing: border-box;
}

.form-group {
    margin-bottom: 15px;
}

.control-label {
    color: white; /* Màu chữ trắng cho nhãn */
}

.form-control {
    width: calc(100% - 16px); /* Độ rộng của input */
    padding: 8px;
    border: 1px solid #543; /* Viền màu nâu */
    border-radius: 4px;
}

.btn-primary {
    background-color: #543; /* Màu nâu cho nút */
    color: white; /* Màu chữ trắng cho nút */
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.3s; /* Hiệu ứng chuyển đổi màu nền */
}

.btn-primary:hover {
    background-color: #432; /* Màu nâu tối khi hover */
}

a {
    color: #654321; /* Màu nâu cho các liên kết */
    text-decoration: none;
}

a:hover {
    text-decoration: underline; /* Gạch chân khi hover */
}
</style>

<h1>Create</h1>

<h4>SanPham</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SanPhamID" class="control-label"></label>
                <input asp-for="SanPhamID" class="form-control" />
                <span asp-validation-for="SanPhamID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SanPhamName" class="control-label"></label>
                <input asp-for="SanPhamName" class="form-control" />
                <span asp-validation-for="SanPhamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gia" class="control-label"></label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
