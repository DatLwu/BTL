@model Cafe.Models.SanPham

@{
    ViewData["Title"] = "Create";
}

<div class="w3-row">
    <H1><b>Sản Phẩm/</b>create</H1>
</div>
<hr>
<div class="max-width-40 ud-center">
    <div class=" w3-container w3-brown">
        <h2>Thêm sản phẩm mới</h2>
       <form asp-action="Upload" enctype="multipart/form-data">
            <input type="file" name="file" class="col-sm-4">
            <input type="submit" value="Upload" class="btn btn-primary ">
        </form>
    </div>
    <form asp-action="Create" class="w3-container w3-card-4 w3-padding ">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="w3-row">
            <div class="w3-col l2">
                <label asp-for="SanPhamID" class="control-label"></label>
                <input asp-for="SanPhamID" class="w3-input w3-border w3-border-brown w3-round" />
                <span asp-validation-for="SanPhamID" class="text-danger"></span>
            </div>

            <div class="w3-col l8 w3-right">
                <label asp-for="SanPhamName" class="control-label"></label>
                <input asp-for="SanPhamName" class="w3-input w3-border w3-border-brown w3-round" />
                <span asp-validation-for="SanPhamName" class="text-danger"></span>
            </div>
            <div class="w3-col l8 w3-right ">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="w3-input w3-border w3-border-brown w3-round" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
              <div class="w3-col l3 ">
                <label asp-for="Gia" class="control-label"></label>
                <input asp-for="Gia" class="w3-input w3-border w3-border-brown w3-round" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            
        </div>
        <div class="w3-margin-top">
            <a class="w3-btn w3-round w3-brown w3-card-4" asp-action="Index">Quay lại</a>
            <input type="submit" value="Create" class="w3-btn w3-brown w3-right w3-round w3-card-4" />
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}