@model Cafe.Models.SanPham

@{
    ViewData["Title"] = "Delete";
}
<style>
    /* CSS cho trang Delete */
    body {
        font-family: Arial, sans-serif; /* Font chữ */
        background-color: #f5f5f5; /* Màu nền */
        color: #333; /* Màu chữ */
    }

    h1 {
        color: #654321; /* Màu nâu */
    }

    /* Định dạng khung chung */
    .container {
        width: 50%; /* Độ rộng khung */
        margin: 20px auto; /* Canh giữa khung */
        background-color: #fff; /* Màu nền trắng */
        border: 2px solid #654321; /* Viền khung màu nâu */
        border-radius: 6px; /* Bo tròn góc */
        padding: 20px;
    }

    /* Định dạng tiêu đề */
    h3 {
        color: #654321; /* Màu nâu cho tiêu đề */
    }

    /* Định dạng đường kẻ ngăn cách */
    hr {
        border-top: 1px solid #654321; /* Đường kẻ màu nâu */
    }

    /* Định dạng nút Delete */
    .btn-danger {
        background-color: #ff0000; /* Màu đỏ */
        color: #fff; /* Màu chữ trắng */
        border: none;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 4px;
    }

    .btn-danger:hover {
        background-color: #cc0000; /* Màu đỏ nhạt khi hover */
    }

    /* Định dạng link "Back to List" */
    a {
        color: #654321; /* Màu nâu cho link */
        text-decoration: none;
        margin-top: 10px;
        display: inline-block;
    }

    a:hover {
        text-decoration: underline;
    }

    /* Định dạng khung dữ liệu */
    .data-box {
        background-color: #654321; /* Màu nền khung dữ liệu */
        color: #fff; /* Màu chữ trắng */
        padding: 10px;
        border-radius: 6px;
        margin-bottom: 15px;
    }

    /* Định dạng tiêu đề của khung dữ liệu */
    .data-title {
        font-weight: bold;
        margin-bottom: 5px;
    }
</style>
<h1>Delete</h1>

<h3>Bạn có chắc muốn xóa dữ liệu sản phẩm đã lưu ?</h3>
<div>
    <h4>SanPham</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SanPhamName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SanPhamName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SoLuong)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gia)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SanPhamID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
