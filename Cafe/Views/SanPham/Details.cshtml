@model Cafe.Models.SanPham

@{
    ViewData["Title"] = "Details";
}

<style>
    /* CSS cho trang Details */
    body {
        font-family: Arial, sans-serif; /* Font chữ */
        background-color: #f5f5f5; /* Màu nền */
        color: #333; /* Màu chữ */
    }

    h1 {
        color: #654321; /* Màu nâu */
    }

    /* CSS cho bảng chi tiết */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        border: 2px solid #654321; /* Đường viền nâu */
    }

    th, td {
        padding: 10px;
        border: 1px solid #654321; /* Đường viền nâu */
    }

    th {
        background-color: #f5f5f5; /* Màu nền */
        color: #333; /* Màu chữ */
        font-weight: bold;
    }

    /* Định dạng link */
    a {
        color: #654321; /* Màu nâu cho link */
        text-decoration: none;
        margin-top: 10px;
        display: inline-block;
    }

    a:hover {
        text-decoration: underline;
    }
</style>

<h1>Details</h1>

<div>
    <h4>SanPham</h4>
    <hr />
    <table>
        <tr>
            <th>@Html.DisplayNameFor(model => model.SanPhamName)</th>
            <td>@Html.DisplayFor(model => model.SanPhamName)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.SoLuong)</th>
            <td>@Html.DisplayFor(model => model.SoLuong)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Gia)</th>
            <td>@Html.DisplayFor(model => model.Gia)</td>
        </tr>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.SanPhamID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>