@model Cafe.Models.NhanVien

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: #f7f7f7; /* Màu nền xám nhạt */
        color: #333; /* Màu chữ */
        font-family: Arial, sans-serif; /* Font chữ */
        padding: 20px;
    }

    /* CSS cho phần thông tin NhanVien */
    .details-section {
        margin-bottom: 20px;
        padding: 20px;
        border: 2px solid #654321; /* Viền nâu */
        background-color: #fff; /* Màu nền trắng cho phần thông tin */
    }

    .details-section h4 {
        color: #333; /* Màu chữ */
    }

    .row {
        margin-bottom: 10px;
    }

    .col-sm-2 {
        font-weight: bold;
        color: #654321; /* Màu nâu */
    }

    /* CSS cho bảng thông tin chi tiết */
    .details-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
        border: 1px solid #654321; /* Viền nâu cho bảng */
    }

    .details-table th,
    .details-table td {
        border: 1px solid #654321; /* Viền kẻ cho mỗi ô */
        padding: 10px;
        text-align: left;
    }

    .details-table th {
        background-color: #f2f2f2; /* Màu nền xám nhạt cho header */
        color: #333; /* Màu chữ */
    }

    /* CSS cho nút Delete và link Back to List */
    .btn-danger {
        background-color: #dc3545; /* Màu đỏ */
        color: #fff; /* Màu chữ trắng */
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        text-decoration: none;
    }

    .btn-danger:hover {
        background-color: #c82333; /* Màu đỏ sậm khi hover */
    }

    .back-link {
        color: #007bff; /* Màu xanh dương */
        text-decoration: none;
        margin-left: 10px;
    }

    .back-link:hover {
        text-decoration: underline;
    }
</style>

<h1>Delete</h1>

<h3>Bạn có chắc chắn xóa dữ liệu nhân viên đã lưu ?</h3>
<div class="details-section">
    <h4>NhanVien</h4>
    <hr />
    <table class="details-table">
        <tr>
            <th>NhanVienName</th>
            <td>@Html.DisplayFor(model => model.NhanVienName)</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Html.DisplayFor(model => model.Address)</td>
        </tr>
        <tr>
            <th>SDT</th>
            <td>@Html.DisplayFor(model => model.SDT)</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Html.DisplayFor(model => model.Email)</td>
        </tr>
    </table>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="NhanVienID" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="back-link">Back to List</a>
</form>